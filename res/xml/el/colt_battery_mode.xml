<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" xmlns:settings="http://schemas.android.com/apk/res/com.android.settings" android:title="@string/battery_mode_title">


	<Preference android:key="batterybar_settings" android:title="@string/battery_bar_title" android:summary="@string/battery_bar_summary" android:fragment="com.colt.settings.fragments.BatteryBar"/>

        <com.colt.settings.preference.SystemSettingListPreference android:key="qs_battery_mode" android:title="@string/qs_battery_percentage_title" android:entries="@array/qs_battery_mode_entries" android:entryValues="@array/qs_battery_mode_values" android:summary="%s" android:defaultValue="1"/>

        <com.colt.settings.preference.SystemSettingListPreference android:key="status_bar_battery_style" android:title="@string/status_bar_battery_style_title" android:summary="%s" android:dialogTitle="@string/status_bar_battery_style_title" android:entries="@array/status_bar_battery_style_entries" android:entryValues="@array/status_bar_battery_style_values" android:defaultValue="0"/>

        <!-- Show Battery percent on Statusbar -->
        <com.colt.settings.preference.SystemSettingListPreference android:key="status_bar_show_battery_percent" android:title="@string/battery_percentage_title" android:entries="@array/status_bar_battery_percentage_entries" android:entryValues="@array/status_bar_battery_percentage_values" android:summary="%s" android:defaultValue="0"/>

        <!-- Show battery percent when charging -->
        <com.colt.settings.preference.SystemSettingSwitchPreference android:key="status_bar_battery_text_charging" android:title="@string/status_bar_battery_text_charging_title" android:summary="@string/status_bar_battery_text_charging_summary" android:defaultValue="true"/>

        <PreferenceCategory android:key="aggressive_battery" android:title="@string/aggressive_battery_title">

        <com.colt.settings.preference.GlobalSettingSwitchPreference android:key="aggressive_idle_enabled" android:title="@string/aggressive_idle_title" android:summary="@string/aggressive_idle_summary" android:defaultValue="false" android:dependency="aggressive_battery_saver"/>

        <com.colt.settings.preference.GlobalSettingSwitchPreference android:key="aggressive_standby_enabled" android:title="@string/aggressive_standby_title" android:summary="@string/aggressive_standby_summary" android:defaultValue="false" android:dependency="aggressive_battery_saver"/>

        <com.colt.settings.preference.GlobalSettingSwitchPreference android:key="aggressive_battery_saver" android:title="@string/aggressive_battery_saver_title" android:summary="@string/aggressive_battery_saver_summary" android:defaultValue="true" android:disableDependentsState="true"/>
    </PreferenceCategory>

    <PreferenceScreen android:key="battery_charge_sound" android:title="@string/notification_sound_battery_charge_title" android:summary="@string/notification_sound_battery_charge_summary" android:fragment="com.colt.settings.fragments.BatteryChargeSoundSettings"/>
</PreferenceScreen>
