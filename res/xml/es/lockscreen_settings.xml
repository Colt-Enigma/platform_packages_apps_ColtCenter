<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" xmlns:settings="http://schemas.android.com/apk/res/com.android.settings">

    <Preference android:title="@string/lockscreen_tuner_title">
            <intent android:action="android.intent.action.MAIN" android:targetPackage="com.android.systemui" android:targetClass="com.android.systemui.tuner.LockscreenActivity"/>
    </Preference>

        <!-- Ambient Display -->
        <Preference android:key="ambient_display_custom" android:persistent="false" android:title="@string/ambient_display_custom_title">
            <intent android:action="android.intent.action.MAIN" android:targetPackage="com.custom.ambient.display" android:targetClass="com.custom.ambient.display.DozeSettings"/>
        </Preference>

<com.colt.settings.preference.SystemSettingSwitchPreference android:key="lockscreen_battery_info" android:title="@string/lockscreen_battery_info_title" android:summary="@string/lockscreen_battery_info_summary" android:defaultValue="true"/>

        <Preference android:key="omnijaws_settings" android:title="@string/lockscreen_weather_settings_title" android:summary="@string/lockscreen_weather_settings_summary" android:fragment="com.colt.settings.fragments.OmniJawsSettings"/>

        <!-- FOD customization options -->
        <PreferenceCategory android:key="fod_icon_picker" android:title="@string/fod_icon_picker_category_title">

        <Preference android:key="fod_icon_picker_category" android:title="@string/fod_icon_picker_title" android:summary="@string/fod_icon_picker_summary" android:fragment="com.colt.settings.fragments.FODIconPickerFragment"/>
        
        <!-- FOD recognizing animation -->
        <com.colt.settings.preference.SystemSettingSwitchPreference android:key="fod_recognizing_animation" android:title="@string/fod_recog_animation" android:summary="@string/fod_recog_animation_summary" android:defaultValue="false"/>
        
        <com.colt.settings.preference.SystemSettingListPreference android:key="fod_anim" android:title="@string/fod_recog_animation_effect_title" android:summary="%s" android:entries="@array/fod_recog_animation_entries" android:entryValues="@array/fod_recog_animation_values" android:defaultValue="0" android:dependency="fod_recognizing_animation"/>

        <com.colt.settings.preference.SystemSettingListPreference android:key="fod_pressed_state" android:dialogTitle="@string/fod_pressed_state_title" android:title="@string/fod_pressed_state_title" android:summary="%s" android:entries="@array/fod_pressed_state_entries" android:entryValues="@array/fod_pressed_state_values" android:defaultValue="0"/>

        <Preference android:summary="@string/fod_pressed_state_footer"/>

    </PreferenceCategory>
        
<PreferenceCategory android:key="lockscreen_media_category" android:title="@string/lockscreen_media_category">

        <com.colt.settings.preference.SystemSettingSwitchPreference android:key="lockscreen_media_metadata" android:title="@string/media_art_title" android:summary="@string/media_art_summary" android:defaultValue="true"/>

	<com.colt.settings.preference.SystemSettingSeekBarPreference android:key="lockscreen_media_blur" android:title="@string/lockscreen_media_blur_title" android:max="100" settings:min="5" settings:units="%" settings:interval="5" android:defaultValue="100" android:dependency="lockscreen_media_metadata"/>

        <com.colt.settings.preference.SystemSettingListPreference android:key="lockscreen_album_art_filter" android:title="@string/lockscreen_cover_filter_title" android:entries="@array/lockscreen_cover_filter_entries" android:entryValues="@array/lockscreen_cover_filter_values" android:dependency="lockscreen_media_metadata" android:defaultValue="5"/>

	<com.colt.settings.preference.SecureSettingMasterSwitchPreference android:key="lockscreen_visualizer_enabled" android:fragment="com.colt.settings.fragments.Visualizer" android:title="@string/lockscreen_visualizer_enable" android:summary="@string/lockscreen_visualizer_enable_summary" android:defaultValue="false"/>

	</PreferenceCategory>

	<com.colt.settings.preference.SecureSettingSwitchPreference android:key="hide_lock_shortcuts" android:title="@string/lockscreen_hide_shortcuts_title" android:summary="@string/lockscreen_hide_shortcuts_summary" android:defaultValue="false"/>

	<com.colt.settings.preference.SecureSettingSwitchPreference android:key="hide_lockicon" android:title="@string/hide_lockicon_title" android:summary="@string/hide_lockicon_summary" android:defaultValue="false"/>

        <com.colt.settings.preference.SystemSettingSwitchPreference android:key="lockscreen_show_status_bar" android:title="@string/lockscreen_show_status_bar_title" android:summary="@string/lockscreen_show_status_bar_summary" android:defaultValue="true"/>

	<com.colt.settings.preference.SystemSettingSwitchPreference android:key="fp_unlock_keystore" android:title="@string/fp_unlock_keystore_title" android:summary="@string/fp_unlock_keystore_summary" android:defaultValue="false"/>

	<SwitchPreference android:key="fingerprint_success_vib" android:title="@string/fprint_sucess_vib_title" android:summary="@string/fprint_sucess_vib_summary" android:persistent="false"/>
</PreferenceScreen>
