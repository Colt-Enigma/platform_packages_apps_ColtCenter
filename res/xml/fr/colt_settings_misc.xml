<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" xmlns:settings="http://schemas.android.com/apk/res/com.android.settings" android:title="@string/misc_title">

   <PreferenceCategory android:title="@string/keys_action_omniswitch_short">

        <ListPreference android:key="navbar_recents_style" android:title="@string/navbar_recents_style_title" android:entries="@array/navbar_recents_style_entries" android:entryValues="@array/navbar_recents_style_values" android:persistent="false"/>

        <Preference android:icon="@drawable/ic_info_outline_24dp" android:persistent="false" android:summary="@string/recents_style_info_title"/>

    </PreferenceCategory>

   <com.colt.settings.preference.SystemSettingMasterSwitchPreference android:key="gaming_mode_enabled" android:fragment="com.colt.settings.fragments.GamingMode" android:title="@string/gaming_mode_title" android:summary="@string/gaming_mode_summary" android:defaultValue="false"/>

   <com.colt.settings.preference.SystemSettingSwitchPreference android:key="sensor_block" android:title="@string/sensor_block_title" android:summary="@string/sensor_block_summary" android:defaultValue="false"/>

   <com.colt.settings.preference.SystemSettingSwitchPreference android:key="charging_animation" android:title="@string/charging_animation_title" android:summary="@string/charging_animation_summary" android:defaultValue="true"/>

   <Preference android:key="suspend_actions" android:title="@string/screen_state_toggles_title" android:summary="@string/screen_state_toggles_summary_opt" android:fragment="com.colt.settings.fragments.SuspendActions"/>

    <Preference android:key="wakelock_blocker" android:title="@string/wakelock_blocker_title" android:summary="@string/wakelock_blocker_summary" android:fragment="com.colt.settings.fragments.WakeLockBlocker"/>

    <Preference android:id="@+id/alarm_blocker" android:title="@string/alarm_blocker" android:summary="@string/alarm_blocker_summary" android:fragment="com.colt.settings.fragments.AlarmBlocker"/>

    <Preference android:key="smart_pixels" android:title="@string/smart_pixels_title" android:summary="@string/smart_pixels_summary" android:fragment="com.colt.settings.fragments.SmartPixels"/>

    <!-- Device Part -->
        <Preference android:key="oneplus_shit" android:persistent="false" android:title="@string/device_part_title">
            <intent android:action="android.intent.action.MAIN" android:targetPackage="com.oneplus.shit.settings" android:targetClass="com.oneplus.shit.settings.ShitPanelSettings"/>
        </Preference>

	<PreferenceCategory android:key="aspect_ratio_category" android:title="@string/aspect_ratio_category_title">
        <com.colt.settings.preference.SystemSettingSwitchPreference android:key="aspect_ratio_apps_enabled" android:title="@string/aspect_ratio_apps_enabled_title" android:summary="@string/aspect_ratio_apps_enabled_summary" android:defaultValue="false"/>
        <com.colt.settings.preference.AppMultiSelectListPreference android:dependency="aspect_ratio_apps_enabled" android:summary="@string/aspect_ratio_apps_list_summary" android:title="@string/aspect_ratio_apps_list_title" android:key="aspect_ratio_apps_list" android:persistent="false"/>
        <com.colt.settings.preference.ScrollAppsViewPreference android:dependency="aspect_ratio_apps_enabled" android:key="aspect_ratio_apps_list_scroller" android:persistent="false" android:selectable="false"/>
        <Preference android:dependency="aspect_ratio_apps_enabled" android:persistent="false" android:summary="@string/aspect_ratio_apps_info"/>

    </PreferenceCategory>
 
</PreferenceScreen>
