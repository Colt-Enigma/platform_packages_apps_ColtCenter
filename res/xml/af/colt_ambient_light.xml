<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" xmlns:settings="http://schemas.android.com/apk/res/com.android.settings" android:title="@string/ambient_light_settings_title">

	<!-- Preview -->
        <com.colt.settings.preference.AmbientLightSettingsPreview android:key="ambientlight_preview" android:layout="@layout/ambient_light" android:selectable="false"/>

        <com.colt.settings.preference.SystemSettingSwitchPreference android:key="pulse_ambient_light" android:title="@string/pulse_ambient_light_title" android:summary="@string/pulse_ambient_light_summary" android:defaultValue="false"/>

        <com.colt.settings.preference.SystemSettingSwitchPreference android:key="pulse_ambient_light_auto_color" android:title="@string/pulse_ambient_light_auto_color_title" android:summary="@string/pulse_ambient_light_auto_color_summary" android:dependency="pulse_ambient_light" android:defaultValue="false"/>

        <net.margaritov.preference.colorpicker.ColorPickerPreference android:key="pulse_ambient_light_color" android:title="@string/pulse_ambient_light_color_title" android:dependency="pulse_ambient_light" settings:defaultColorValue="0xFF3980FF"/>

        <com.colt.settings.preference.CustomSeekBarPreference android:key="pulse_ambient_light_duration" android:title="@string/pulse_ambient_light_duration_title" android:persistent="false" android:defaultValue="2" android:max="10" settings:min="1" settings:units="sec" android:dependency="pulse_ambient_light"/>

</PreferenceScreen>
