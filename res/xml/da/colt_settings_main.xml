<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" xmlns:settings="http://schemas.android.com/apk/res/com.android.settings" android:title="@string/colt_settings_title">

    <PreferenceCategory android:key="colt_interface" android:title="@string/colt_interface">

	<Preference android:fragment="com.colt.settings.fragments.StatusBarSettings" android:key="colt_statusbar_settings" android:title="@string/statusbar_settings_title"/>

	<!-- Quick Settings panel -->
        <Preference android:key="quicksettings_category" android:title="@string/quicksettings_title" android:fragment="com.colt.settings.fragments.QuickSettings"/>

	<!-- Lock Screen -->
	<Preference android:fragment="com.colt.settings.fragments.LockScreenSettings" android:key="colt_lockscreen_settings" android:title="@string/lockscreen_settings_title"/>

	<!-- Buttons -->
        <Preference android:key="buttonsettings_category" android:title="@string/button_title" android:fragment="com.colt.settings.fragments.ButtonSettings"/>

        <!-- Navigation Bar -->
        <Preference android:key="navigationbar_category" android:title="@string/navbar_title" android:fragment="com.colt.settings.fragments.NavbarSettings"/>

	<!-- Power Menu -->
        <Preference android:key="powermenu__category" android:title="@string/powermenu_title" android:fragment="com.colt.settings.fragments.PowerMenuSettings"/>

	<!-- Gestures -->
        <Preference android:key="gestures_category" android:title="@string/gestures_title" android:fragment="com.colt.settings.fragments.GestureSettings"/>

	<!-- Device Part -->
        <Preference android:key="device_part" android:persistent="false" android:title="@string/device_part_title">
            <intent android:action="android.intent.action.MAIN" android:targetPackage="org.omnirom.device" android:targetClass="org.omnirom.device.DeviceSettings"/>
        </Preference>

    </PreferenceCategory>

</PreferenceScreen>
